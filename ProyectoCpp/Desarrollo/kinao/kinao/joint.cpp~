#include "joint.h"


Joint::Joint()
{
}
Joint::~Joint()
{
}

float Joint::length(float p1[3], float p2[3]){

    return (sqrt(pow((p2[0]-p1[0]),2)+pow((p2[1]-p1[1]),2)+pow((p2[2]-p1[2]),2)));
    //Determina el vector que va de P1 a P2
}


float Joint::angle(float a, float b, float c){

    return (/*(PI/180)*acos(*/(pow(a,2)+pow(b,2)-pow(c,2))/(2*a*b))/*)*/;//c es el segmento contrario al angulo por determinar

}
